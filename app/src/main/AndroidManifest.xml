<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smb1">
    <permission android:name="com.example.myapp.PERMISSION"/>
    <uses-permission android:name="com.example.myapp.PERMISSION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SMB1">
        <activity
            android:name=".Activity.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.ShoppingListEditActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.ItemEditActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.ShoppingListActivity"
            android:exported="false"
            android:label="@string/title_activity_shopping_list"
            android:theme="@style/Theme.SMB1.NoActionBar" />
        <activity
            android:name=".Activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".contentprovider.Provider"
            android:authorities="com.example.democontentprovider.provider"
            android:exported="true" />
    </application>

</manifest>